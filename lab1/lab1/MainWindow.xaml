<Window x:Class="lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        Title="new" Height="480" Width="850" Background="Black" >
    <Grid x:Name="grid1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Foreground="Green" FontSize="16" Grid.Column="1" Grid.Row="1" Margin="5,20,5,20" >Введите нижний предел</TextBlock>
        <TextBox Name="Text1" Foreground="Green" FontSize="16" Grid.Column="2" Grid.Row="1" Margin="5,15,5,20" RenderTransformOrigin="0.493,0.452" MaxLength="10"></TextBox>
        <TextBlock Foreground="Green" FontSize="16" Grid.Column="1" Grid.Row="2" Margin="5,20,5,20">Введите верхний предел</TextBlock>
        <TextBox Name="Text2" Foreground="Green" FontSize="16" Grid.Column="2" Grid.Row="2" Margin="5,15,5,20" MaxLength="10"></TextBox>
        <TextBlock Foreground="Green" FontSize="16" Grid.Column="1" Grid.Row="3" Margin="5,20,5,20">Введите число разбиений</TextBlock>
        <TextBox Name="Text3" Foreground="Green" FontSize="16" Grid.Column="2" Grid.Row="3" Margin="5,15,5,20" MaxLength="10" ></TextBox>
        <Button Name="button1" FontSize="20" Grid.Column="3" Grid.Row="2" Margin="5,5,5,5" Content="Расчитать"/>
        <TextBlock Name ="Answer"  Foreground="Green" Background="black" FontSize="20" Grid.Column="4" Grid.Row="2" Margin="5,10,10,10" VerticalAlignment="Center"/>
        <TextBlock Foreground="Green" FontSize="16" Grid.Column="2" Grid.Row="4" Margin="5,20,5,20" > Выберите типа интегрирования</TextBlock>
        <ComboBox Name="MetodBox" Grid.Column="3" Grid.Row="4" Margin="5" VerticalAlignment="Center" FontSize="16">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">метод прямоугольников</TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">метод трапеций</TextBlock>
        </ComboBox>

    </Grid>
</Window>
